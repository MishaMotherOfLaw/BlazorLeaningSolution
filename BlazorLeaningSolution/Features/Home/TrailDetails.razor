@using BlazingTrails.Client.Features.Home
<div class="drawer-wrapper @(_isOpen ? "slide" : "")">
    <div class="drawer-mask"></div>
    <div class="drawer">
        @if (p_activeTrail is not null)
        {
            <div class="drawer-content">
                <img src="@p_activeTrail.Image" />
                <div class="trail-details">
                    <h3>@p_activeTrail.Name</h3>
                    <h6 class="mb-3 text-muted">
                        <span class="oi oi-map-marker"></span>
                        @p_activeTrail.Location
                    </h6>
                    <div class="mt-4">
                        <span class="mr-5">
                            <span class="oi oi-clock mr-2"></span>
                            @p_activeTrail.TimeFormatted
                        </span>
                        <span>
                            <span class="oi oi-infinity mr-2"></span>
                            @p_activeTrail.Length km
                        </span>
                    </div>
                    <p class="mt-4">@p_activeTrail.Description</p>
                </div>
            </div>
            <div class="drawer-controls">
                <button class="btn btn-secondary"
                        @onclick="Close">Close</button>
            </div>
        }
    </div>
</div>
@code {
    private bool _isOpen;
    private Trail? p_activeTrail;
    [Parameter, EditorRequired]
    public Trail? Trail { get; set; }
    protected override void OnParametersSet()
    {
        if (Trail != null)
        {
            p_activeTrail = Trail;
            _isOpen = true;
        }
    }
    private void Close()
    {
        p_activeTrail = null;
        _isOpen = false;
    }
}